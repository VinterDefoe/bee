{% extends 'layout.twig' %}

{% block header %}

    {#Header#}
    <div class="row b-header fixed-top align-items-center">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-7">
                    <h1 class="text-left">Reviews</h1>
                </div>

                <div class="col-5 text-right">
                    {% if not userName %}
                    <form class="m-0" action="login/" method="post">
                        <div class="form-group-sm">
                            <label><input class="form-control form-control-sm" placeholder="Login" name="login" type="text"></label>
                            <label><input class="form-control form-control-sm" placeholder="Password" name="password" type="text"></label>
                            <input class=" btn-sm btn-primary" type="submit" value="Sing in">
                        </div>
                    </form>
                    {% else %}
                        <form class="m-0" action="logout/" method="post">
                            <div class="form-group-sm">
                                <span class="b-user">admin</span>
                                <input class=" btn-sm btn-primary" type="submit" value="Sing out">
                            </div>
                            <div class="b-error">
                                {#Wrong login or password!#}
                            </div>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {#end header#}

{% endblock %}